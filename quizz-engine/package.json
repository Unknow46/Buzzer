{
  "name": "server",
  "version": "1.0.0",
  "description": "Multiplayer quiz game backend to use with the Vue.js frontend.",
  "repository": "https://github.com/octogene/quizz-engine",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "start:dev": "set DEBUG=server:* & node dist/server.js",
    "build:ts": "tsc",
    "build:assets": "mkdir -p dist/assets && cp assets/* dist/assets/",
    "watch:node": "nodemon dist/server.js",
    "watch:node:debug": "cross-env-shell DEBUG=server:* nodemon dist/server.js",
    "watch:ts": "tsc -w",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript, Node\" -c \"yello.bold, cyan.bold\" \"npm run watch:ts\" \"npm run watch:node:debug\"",
    "test": "jest --config ./jest.config.js --maxWorkers=1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/axios": "^0.14.0",
    "@types/chalk": "^2.2.0",
    "@types/express": "^4.17.1",
    "@types/lodash": "^4.14.141",
    "@types/node": "^12.7.11",
    "@types/randomcolor": "^0.5.3",
    "@types/socket.io": "^2.1.3",
    "@types/socket.io-client": "^1.4.32",
    "axios": "^0.19.0",
    "chalk": "^2.4.2",
    "debug": "^4.1.1",
    "express": "^4.17.1",
    "lodash": "^4.17.15",
    "randomcolor": "^0.5.4",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@typescript-eslint/eslint-plugin": "^2.3.2",
    "@typescript-eslint/parser": "^2.3.2",
    "concurrently": "^4.1.2",
    "cross-env": "^6.0.3",
    "eslint": "^6.5.1",
    "eslint-plugin-lodash": "^6.0.0",
    "eslint-plugin-you-dont-need-lodash-underscore": "^6.7.1",
    "jest": "^24.9.0",
    "nodemon": "^1.19.3",
    "socket.io-client": "^2.3.0",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.3"
  },
  "extends": [
    "plugin:you-dont-need-lodash-underscore/compatible"
  ]
}
